<div class="jumbotron">
  <div class="container">
    <br><br><br><br><br><br><br><br>
    <h1 style="color: #FFFFFF; text-align: right">Hi, I'm Kyle</h1>
    <p style="color: #FFFFFF; text-align: right"><em>programmer // photographer // jeep lover</em>
    <a class="btn btn-success btn-lg" href="/about" role="button">More About Me &raquo;</a></p>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @latestPosts.each do |category, post| %>
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h2 class="panel-title"><%= category %></h2>
          </div>
          <div class="panel-body">
            <% if post!=nil %>
              <h4><%= post.name %></h4>
              <% if !post.photos.empty? %>
                <%= image_tag post.photos.first.path.thumb.url %>
              <% end %>
              <p><%= truncate(strip_tags(post.body), :length => 150) %><%= link_to " Read More", posts_path(post.id)%></p>
              <%= link_to "View more posts&raquo;".html_safe, posts_path(:category => post.category), class: "btn btn-primary" %>
            <% else %>
              <h4>Coming Soon!</h4>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
