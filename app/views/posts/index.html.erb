<br>
<div class="container">
  <% if !@posts.empty? %>
    <% @posts.each do |post| %>
      <div class="well">
        <h3><%= post.name %></h3>
        <hr>
        <p><%= truncate(strip_tags(post.body)) %><%= link_to " Read more", post_path(post.id) %></p>
      </div>
    <% end %>
  <% else %>
    <h3>Posts Coming Soon!</h3>
  <% end %>
</div>
